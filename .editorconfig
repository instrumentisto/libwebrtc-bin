root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
indent_style = space
indent_size = 2

[*.{bat,ps1}]
indent_style = space
indent_size = 2
max_line_length = off

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4
